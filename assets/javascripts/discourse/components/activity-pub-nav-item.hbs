{{#if @category}}
  <a
    class={{this.classes}}
    href={{this.href}}
    title={{i18n
      "discourse_activity_pub.category_nav.description"
      category_name=@category.name
    }}
    {{did-insert this.subscribe}}
    {{did-insert this.didChangeCategory}}
    {{did-update this.didChangeCategory @category}}
    {{will-destroy this.unsubscribe}}
  >
    {{d-icon "discourse-activity-pub"}}
    {{i18n "discourse_activity_pub.category_nav.label"}}
  </a>
{{/if}}